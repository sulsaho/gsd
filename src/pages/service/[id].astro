---
import BaseLayout from '../../layouts/BaseLayout.astro';
import servicesData from '../../data/services.json';

export async function getStaticPaths() {
  const paths: any[] = [];

  servicesData.ministries.forEach((ministry) => {
    ministry.departments.forEach((department) => {
      department.services.forEach((service) => {
        paths.push({
          params: { id: service.id },
          props: {
            service,
            ministry,
            department,
          },
        });
      });
    });
  });

  return paths;
}

const { service, ministry, department } = Astro.props;
---

<BaseLayout title={`${service.name} - ${ministry.name}`} description={service.description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <nav class="mb-6 no-print" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
        <li>
          <a href="/" class="hover:text-primary-700 dark:hover:text-primary-400 transition-colors">
            Home
          </a>
        </li>
        <li>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </li>
        <li>
          <a href={`/#ministry-${ministry.id}`} class="hover:text-primary-700 dark:hover:text-primary-400 transition-colors">
            {ministry.name}
          </a>
        </li>
        <li>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </li>
        <li class="text-gray-900 dark:text-white font-medium">
          {service.name}
        </li>
      </ol>
    </nav>

    <div class="card p-4 sm:p-8 print-friendly dark:bg-gray-800">
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4 mb-4">
          <div class="flex-1 min-w-0">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-2">
              {service.name}
            </h1>
            <p class="text-base sm:text-lg text-gray-600 dark:text-gray-400">
              {service.description}
            </p>
          </div>
          <button
            onclick="window.print()"
            class="no-print bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 px-3 sm:px-4 py-2 rounded-lg transition-colors flex items-center justify-center sm:justify-start whitespace-nowrap flex-shrink-0"
          >
            <svg class="w-5 h-5 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
            </svg>
            <span class="hidden sm:inline">Print</span>
          </button>
        </div>

        <div class="flex flex-wrap items-center gap-2 text-xs sm:text-sm text-gray-600 dark:text-gray-400">
          <span class="bg-primary-50 dark:bg-primary-900 text-primary-700 dark:text-primary-300 px-2 sm:px-3 py-1 rounded-full font-medium">
            {ministry.name}
          </span>
          <span class="text-gray-400 dark:text-gray-600">â€¢</span>
          <span class="bg-secondary-50 dark:bg-secondary-900 text-secondary-700 dark:text-secondary-300 px-2 sm:px-3 py-1 rounded-full font-medium">
            {department.name}
          </span>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8 pb-8 border-b border-gray-200 dark:border-gray-700">
        <div class="bg-gradient-to-br from-secondary-50 to-secondary-100 p-6 rounded-lg">
          <div class="flex items-center mb-2">
            <svg class="w-6 h-6 text-secondary-700 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
            </svg>
            <h3 class="text-sm font-medium text-gray-700">Cost</h3>
          </div>
          <p class="text-2xl font-bold text-secondary-900">{service.cost}</p>
        </div>

        <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-lg">
          <div class="flex items-center mb-2">
            <svg class="w-6 h-6 text-blue-700 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            <h3 class="text-sm font-medium text-gray-700">Processing Time</h3>
          </div>
          <p class="text-2xl font-bold text-blue-900">{service.processingTime}</p>
        </div>
      </div>

      <div class="mb-8 pb-8 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
          Requirements
        </h2>
        <ul class="space-y-3">
          {service.requirements.map((requirement) => (
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 dark:text-green-400 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-gray-700 dark:text-gray-300">{requirement}</span>
            </li>
          ))}
        </ul>
      </div>

      <div class="mb-8 pb-8 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Contact Information
        </h2>
        <div class="space-y-3">
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Department</p>
            <p class="text-gray-900 dark:text-gray-200">{service.contactName}</p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Phone</p>
            <a href={`tel:${service.contactPhone}`} class="text-primary-700 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300">
              {service.contactPhone}
            </a>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</p>
            <a href={`mailto:${service.contactEmail}`} class="text-primary-700 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300">
              {service.contactEmail}
            </a>
          </div>
        </div>
      </div>

      <div class="mb-8 pb-8 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          Office Location & Hours
        </h2>
        <div class="space-y-3">
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Address</p>
            <p class="text-gray-900 dark:text-gray-200">{service.officeAddress}</p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Office Hours</p>
            <p class="text-gray-900 dark:text-gray-200">{service.officeHours}</p>
          </div>
        </div>
      </div>

      {(service.link || service.notes) && (
        <div>
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Additional Information
          </h2>
          <div class="space-y-3">
            {service.link && (
              <div>
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Online Application</p>
                <a
                  href={service.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary-700 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300 underline flex items-center"
                >
                  {service.link}
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                </a>
              </div>
            )}
            {service.notes && (
              <div>
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Important Notes</p>
                <p class="text-gray-900 dark:text-gray-200 bg-yellow-50 dark:bg-yellow-900/20 border-l-4 border-yellow-400 dark:border-yellow-600 p-4 rounded">
                  {service.notes}
                </p>
              </div>
            )}
          </div>
        </div>
      )}
    </div>

    <div class="mt-8 no-print">
      <a
        href="/"
        class="inline-flex items-center text-primary-700 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300 font-medium"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to All Services
      </a>
    </div>
  </div>
</BaseLayout>
