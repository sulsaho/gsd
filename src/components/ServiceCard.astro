---
interface Props {
  service: {
    id: string;
    name: string;
    description: string;
    cost: string;
    processingTime: string;
  };
  ministryId: string;
  ministryName: string;
  departmentName: string;
}

const { service, ministryId, ministryName, departmentName } = Astro.props;
---

<div class="card p-4 sm:p-6 border-l-4 border-primary-500 dark:border-primary-400 dark:bg-gray-800">
  <a href={`/service/${service.id}`} class="block group">
    <h3 class="text-base sm:text-lg font-semibold text-primary-700 dark:text-primary-400 group-hover:text-primary-900 dark:group-hover:text-primary-300 transition-colors mb-2">
      {service.name}
    </h3>
  </a>

  <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-2">
    {service.description}
  </p>

  <div class="flex flex-wrap gap-2 sm:gap-3 text-xs">
    <div class="flex items-center bg-secondary-50 text-secondary-800 px-3 py-1 rounded-full">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
      </svg>
      {service.cost}
    </div>

    <div class="flex items-center bg-blue-50 text-blue-800 px-3 py-1 rounded-full">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
      </svg>
      {service.processingTime}
    </div>
  </div>

  <div class="mt-3 pt-3 border-t border-gray-100 dark:border-gray-700">
    <p class="text-xs text-gray-500 dark:text-gray-500">
      {ministryName} &bull; {departmentName}
    </p>
  </div>
</div>
